{
  "name": "bristol",
  "private": true,
  "engineStrict": true,
  "engines": {
    "node": "^14.0.0"
  },
  "version": "1.0.0",
  "description": "bristol template",
  "staticFolder": "main-files",
  "buildDir": "main-files/assets",
  "workspaces": [
    "gatsby"
  ],
  "scripts": {
    "sass": "node-sass --output-style expanded -o main-files/assets/css main-files/assets/scss --source-map true --source-map-contents true",
    "css-prefix": "post-css --replace main-files/assets/css/style.css --use autoprefixer --map",
    "css": "yarn run sass && yarn run css-prefix",
    "docs": "browser-sync start --server documentation --logPrefix 'template documentation' --no-open --no-notify",
    "watch": "onchange 'main-files/assets/**/*.scss' -- yarn run sass",
    "static:build": "node build.js",
    "static:serve": "browser-sync $npm_package_staticFolder -w --ignore 'main-files/assets/**/*.scss' --logPrefix $npm_package_name --no-open --no-notify",
    "static:serveStatic": "browser-sync start -s $npm_package_staticFolder --logPrefix $npm_package_name --no-open --no-notify",
    "static:dev": "concurrently --names 'sass,server' --prefix name 'yarn run watch' 'yarn run static:serve'",
    "dev": "yarn workspace template run develop",
    "clean": "yarn workspace template run clean",
    "serve": "yarn workspace template run serve",
    "build": "yarn workspace template run build",
    "both": "concurrently --names 'static, gatsby' --prefix name 'yarn run static:serveStatic' 'yarn run dev'"
  },
  "devDependencies": {
    "autoprefixer": "^9.8.0",
    "browser-sync": "^2.26.7",
    "clean-css": "^4.2.3",
    "concat": "^1.0.3",
    "concurrently": "^5.2.0",
    "node-sass": "^4.14.1",
    "onchange": "^7.0.2",
    "post-cli": "^1.0.5",
    "uglify-js": "^3.10.0"
  },
  "dependencies": {
    "cpy-cli": "^3.1.1"
  }
}
