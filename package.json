{
  "name": "bristol",
  "private": true,
  "version": "1.0.0",
  "description": "bristol template",
  "staticFolder": "main-files",
  "publishDir": "gatsby/public",
  "compressFile": "build.tar.gz",
  "workspaces": [
    "gatsby"
  ],
  "scripts": {
    "start": "yarn run dev",
    "dev": "yarn workspace template start",
    "clean": "yarn workspace template run clean",
    "build": "yarn workspace template run build",
    "public": "yarn run build && yarn run serve",
    "serve": "yarn workspace template run serve --host 0.0.0.0 --port $process_argv",
    "publish": "cp ./CNAME $npm_package_publishDir && npx surge $npm_package_publishDir && rm $npm_package_publishDir/CNAME",
    "compress": "tar -czvf $npm_package_compressFile -C $npm_package_publishDir .",
    "remote": "source .env.remote && scp $npm_package_compressFile ${REMOTE_CONNECTION}",
    "production": "yarn run compress && yarn run remote && rm $npm_package_compressFile"
  },
  "dependencies": {
    "surge": "^0.21.6"
  }
}
