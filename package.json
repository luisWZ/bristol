{
  "name": "bristol",
  "private": true,
  "version": "1.0.0",
  "description": "bristol template",
  "staticFolder": "main-files",
  "publishDir": "./gatsby/public/",
  "workspaces": [
    "gatsby"
  ],
  "scripts": {
    "start": "yarn run dev",
    "dev": "yarn workspace template start",
    "clean": "yarn workspace template run clean",
    "build": "yarn workspace template run build",
    "public": "yarn run build && yarn run serve",
    "serve": "yarn workspace template run serve --host 0.0.0.0 --port $process_argv",
    "publish": "cp ./CNAME $npm_package_publishDir && surge $npm_package_publishDir"
  },
  "devDependencies": {
    "autoprefixer": "^9.8.0",
    "browser-sync": "^2.26.7",
    "clean-css": "^4.2.3",
    "concat": "^1.0.3",
    "concurrently": "^5.2.0",
    "node-sass": "^4.14.1",
    "onchange": "^7.0.2",
    "post-cli": "^1.0.5",
    "uglify-js": "^3.10.0"
  },
  "dependencies": {
    "cpy-cli": "^3.1.1"
  }
}
